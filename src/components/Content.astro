---
import { Image } from "astro:assets";
import ProjectCard from "./ProjectCard.astro";
import projects from "../assets/projects.json";
import contribuciones from "../assets/contributions.png";
---

<section id="container" aria-labelledby="proyectos-heading">
    <h2 id="proyectos-heading">Mis Proyectos</h2>
    <div class="projects-grid">
        {
            projects.map((project) => (
                <ProjectCard
                    title={project.title}
                    description={project.description}
                    technologies={project.technologies}
                    liveUrl={project.liveUrl}
                    repoUrl={project.repoUrl}
                />
            ))
        }
        <article class="contributions-card">
            <h3>+700 Contribuciones en 2025</h3>
            <Image
                src={contribuciones}
                alt="Gráfico de contribuciones de GitHub de Sebastian Diez mostrando más de 700 contribuciones en 2025"
                loading="lazy"
                width={600}
                height={300}
            />
        </article>
    </div>
</section>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Fugaz+One&family=Roboto:wght@300;400;500&display=swap");

    #container {
        padding: 5%;
        height: 100%;
        width: 100%;
        box-sizing: border-box;
        font-family: "Roboto", sans-serif;
    }

    @media (max-width: 968px) {
        #container {
            padding: 8% 5%;
            height: auto;
        }
    }

    h2 {
        color: #fff;
        font-family: "Fugaz One", cursive;
        font-size: 1.8rem;
        margin: 0 0 1.5rem 0;
    }

    @media (max-width: 968px) {
        h2 {
            font-size: 1.5rem;
            text-align: center;
        }
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(3, auto);
        gap: 1.5rem;
        width: 100%;
    }

    @media (max-width: 1200px) {
        .projects-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
    }

    .contributions-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        border: 1px solid rgba(168, 178, 209, 0.1);
        transition:
            box-shadow 0.3s ease,
            border-color 0.3s ease;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        padding: 15px;
    }

    .contributions-card:hover {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        border-color: rgba(100, 255, 218, 0.3);
    }

    .contributions-card h3 {
        margin: 0 0 0.8rem 0;
        font-size: 1.3rem;
        color: #fff;
        font-family: "Fugaz One", cursive;
        margin-bottom: 30px;
    }

    .contributions-card img {
        width: 100%;
        height: auto;
        object-fit: contain;
        border-radius: 8px;
    }

    @media (max-width: 968px) {
        .contributions-card {
            padding: 12px;
        }

        .contributions-card h3 {
            font-size: 1.1rem;
            margin-bottom: 20px;
        }
    }
</style>
