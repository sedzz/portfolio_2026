---
interface Props {
    title: string;
    description: string;
    technologies: string[];
    liveUrl: string;
    repoUrl: string;
}

const { title, description, technologies, liveUrl, repoUrl } = Astro.props;
const faviconUrl = `https://www.google.com/s2/favicons?domain=${new URL(liveUrl).hostname}&sz=64`;

const techIcons: Record<string, string> = {
    "TypeScript": "devicon-typescript-plain",
    "TS": "devicon-typescript-plain",
    "JavaScript": "devicon-javascript-plain",
    "JS": "devicon-javascript-plain",
    "React": "devicon-react-original",
    "React Native": "devicon-react-original",
    "NextJS": "devicon-nextjs-plain",
    "Next.js": "devicon-nextjs-plain",
    "TailwindCSS": "devicon-tailwindcss-original",
    "Tailwind": "devicon-tailwindcss-original",
    "Node.js": "devicon-nodejs-plain",
    "PostgreSQL": "devicon-postgresql-plain",
    "MongoDB": "devicon-mongodb-plain",
    "Astro": "devicon-astro-plain",
    "Supabase": "devicon-supabase-plain",
    "Expo": "devicon-expo-original",
    "Drizzle": "devicon-azuresqldatabase-plain",
    "FastAPI": "devicon-fastapi-plain",
    "MySQL": "devicon-mysql-plain",
    "AWS": "devicon-amazonwebservices-plain",
    "Docker": "devicon-docker-plain",
    "Linux": "devicon-linux-plain",
};
---

<article class="project-card">
    <div class="card-header">
        <img src={faviconUrl} alt={`Favicon del proyecto ${title}`} class="favicon no-copy" loading="lazy" width="48" height="48" draggable="false" oncontextmenu="return false" />
        <h3>{title}</h3>
    </div>
        <p class="description">{description}</p>
        <div class="technologies">
            {technologies.map((tech) => (
                <span class="tech-tag" title={`Tecnología: ${tech}`}>
                    {techIcons[tech] && <i class={`${techIcons[tech]} colored`} aria-hidden="true"></i>}
                    <span class="sr-only">{tech}</span>
                    <span aria-hidden="true">{tech}</span>
                </span>
            ))}
        </div>
        <div class="card-links">
            <a href={liveUrl} target="_blank" rel="noopener noreferrer" class="link-btn live" aria-label={`Visitar sitio web de ${title}`}>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                    <polyline points="15 3 21 3 21 9"></polyline>
                    <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
                Acceder
            </a>
            {repoUrl && (
                <a href={repoUrl} target="_blank" rel="noopener noreferrer" class="link-btn repo" aria-label={`Ver código fuente de ${title} en GitHub`}>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    Repo
                </a>
            )}
        </div>
</article>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Fugaz+One&family=Roboto:wght@300;400;500&display=swap");

    .project-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        overflow: hidden;
        font-family: "Roboto", sans-serif;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(168, 178, 209, 0.1);
        padding: 15px;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .project-card:hover {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        border-color: rgba(100, 255, 218, 0.3);
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        margin-bottom: 0.8rem;
    }

    .favicon {
        width: 48px;
        height: 48px;
        border-radius: 6px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        -webkit-user-drag: none;
        pointer-events: none;
    }

    .no-copy {
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        -webkit-user-drag: none;
        pointer-events: none;
    }

    .card-content {
        padding: 1.2rem;
    }

    h3 {
        margin: 0;
        font-size: 1.3rem;
        color: #fff;
        font-family: "Fugaz One", cursive;
    }

    .description {
        color: #a8b2d1;
        font-size: 0.9rem;
        line-height: 1.5;
        margin: 0 0 1rem 0;
        flex-grow: 1;
    }

    .technologies {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
        margin-bottom: 1rem;
    }

    .tech-tag {
        display: flex;
        align-items: center;
        gap: 0.3rem;
        background: rgba(100, 255, 218, 0.1);
        color: #ffffff;
        padding: 0.25rem 0.6rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .tech-tag i {
        font-size: 1.3rem;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        pointer-events: none;
    }

    .card-links {
        display: flex;
        gap: 0.8rem;
        margin-top: auto;
    }

    .link-btn {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 500;
        transition: background 0.3s ease, transform 0.3s ease;
    }

    .link-btn.live {
        background: #64ffda;
        color: #0a192f;
    }

    .link-btn.live:hover {
        background: #4cd9b4;
        transform: scale(1.05);
    }

    .link-btn.repo {
        background: #5d6069;
        color: #fff;
    }

    .link-btn.repo:hover {
        background: #8892b0;
        transform: scale(1.05);
    }

    .link-btn svg {
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        pointer-events: none;
    }
</style>
